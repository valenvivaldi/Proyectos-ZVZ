extends layout

block content
  script(src="/socket.io/socket.io.js")
  script.
    var socket = io.connect('/'); //var socket = io.connect('http://localhost:3000');
    function FuncJoin(){
      socket.emit("join");
    }
  
  
  
  
  .container
    h1 Unete a un juego creado! 
    p.lead 
    br
    form(role='form', action="/joingame",method="post", style='max-width: 300px;')
      .form-group
        p Ingrese el nombre del otro jugador
        input.form-control(type='text', name="owner", placeholder='INGRESE EL NOMBRE DEL OTRO JUGADOR!!!')
     
       button.btn.btn-default(type='submit',onclick="FuncJoin()") Aceptar
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") cancelar
    br
    
